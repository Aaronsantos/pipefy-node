{
  "extends": ["eslint:recommended"],
  "env": {
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "quotes": ["error", "single"],
    "arrow-parens": ["error", "always"]
  }
}
